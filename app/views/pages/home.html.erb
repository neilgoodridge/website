    <div class="homepage-sections">
      <%# // visible page starts here // %>
      <div class="homepage-container">
        <div class="intro-tab tab" id="delay1">
          <h2 class="tab-heading">Welcome</h2>
          <div class="tab-surround">
            <div class="hide-div" style="background-image: url()">
              <h3>Hi, I'm Neil.</h3>
              <img class="profile" id="profile" src="https://res.cloudinary.com/k2x4b-523p/image/upload/ar_1:1,c_fill,e_make_transparent:10,g_auto,w_1000/v1627512518/me-removebg_hjglpg.png">
